model Modules {
  id                Int           @id @default(autoincrement())
  moduleName        String        @unique
  moduleDescription String
  isDeleted         Boolean       @default(false)
  createdDate       DateTime?
  lastModifiedDate  DateTime?
  permissions       Permissions[]
}

